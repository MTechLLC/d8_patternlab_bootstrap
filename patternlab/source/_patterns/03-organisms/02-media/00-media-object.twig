<div class="media">
	{% if mediaLeft %}
    <div class="media-left {{ mediaClass }}">
        <a href="{{ url }}">
        	<img class="media-object" src="{{ mediaImage }}" alt="{{ alt }}">
        </a>
    </div>
  {% endif %}
	<div class="media-body">
	  	<h4 class="media-heading">{{ heading }}</h4>
        {{ text }}
        {% for media in nestedMedia  %}
          {% include "molecules-media" with {'mediaLeft': media.mediaLeft, 'mediaRight': media.mediaRight} %}
        {% endfor %}
	</div>
	{% if mediaRight %}
    <div class="media-right {{ mediaClass }}">
        <a href="{{ url }}">
        	<img class="media-object" src="{{ mediaImage }}" alt="{{ alt }}">
        </a>
    </div>
  {% endif %}
</div>

